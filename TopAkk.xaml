<Window x:Class="WpfApp1.TopAkk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TopAkk" Height="450" Width="800" >
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="Welcome" Text="{Binding Login, StringFormat='Здравствуйте, {0}!'}" TextAlignment="Center" FontSize="50" Margin="10,150,0,0" FontWeight="Bold" Foreground="Black"/>
            <Button Click="Button_Click" Content="Личный кабинет" Height="50" Width="200" FontSize="20" FontWeight="Bold" Margin="0,10,0,0" Background="LightGreen"/>
        </StackPanel>
    </Grid>
</Window>
